---
import Bomb from '../assets/bomb.svg'
import Mailbox from '../assets/mailbox.svg'
import Folder from '../assets/folder.svg'
import Savings from '../assets/savings.svg'
import Gift from '../assets/gift.svg'
---


<section class="product-hero">
    <div class="container">
        <div class="d-table">
            <div class="d-table-cell center">
                <div class="hero-copy">
                    <h1 class="h1-title">Mitch Holm</h1>
                    <p>Finding good software engineers is a pain. I'm here to help.</p>
                    <div class="product-cta">
                      <a href="mailto:mitch@holm.design" class="button button-primary u-full-width">Get in touch</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="hero-media">
            <div id="particles-js"></div>
        </div>
    </div>
 </section>

 <style lang="scss">


.product-hero{
  padding: 50px 0;
  position: relative;
  min-height: 600px;
  overflow: hidden;
  .container{
    position: relative;
    height: 100%;
    .d-table{
      height: 500px;
      position: relative;
      z-index: 2;
     }
  }
  .hero-media{
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100%;
    margin-left: calc((100vw - 100%) / -2);
    padding: 5px;
    border-radius: 48px;
    #particles-js {
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
    }
  }
  .hero-copy{
    h1, p{
      max-width: 600px;
      margin: 20px auto;
    }
  }
  .hero-media{
    img{
      position: absolute;
      width: 160px;
      &:nth-child(1){
        top: 0;
        left: -100px;
      }
      &:nth-child(2){
        top: 0;
        right: -100px;
      }
      &:nth-child(3){
        top: 250px;
        left: 0;
      }
      &:nth-child(4){
        top: 250px;
        right: 0;
      }
      &:nth-child(5){
        bottom: -20px;
        left: 50%;
        transform: translateX(-50%);
      }
    }
    @media (max-width:700px) {
      img{
        &:nth-child(2), &:nth-child(3),
        &:nth-child(4){
          display: none;
        }
      }
    }
  }
}

 </style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", async function() {
    await tsParticles.load("particles-js", {
      fullScreen: {
        enable: false
      },
      background: {
        color: {
          value: "transparent"
        }
      },
      particles: {
        number: {
          value: 80,
          density: {
            enable: true,
            value_area: 800
          }
        },
        color: {
          value: "#21562088"
        },
        shape: {
          type: "circle"
        },
        opacity: {
          value: 0.5
        },
        size: {
          value: 3,
          random: {
            enable: true,
            minimumValue: 1
          }
        },
        links: {
          enable: true,
          distance: 150,
          color: "#215620",
          opacity: 0.4,
          width: 1
        },
        move: {
          enable: true,
          speed: 2,
          direction: "none",
          random: false,
          straight: false,
          out_mode: "out",
          bounce: false
        }
      },
      interactivity: {
        events: {
          onHover: {
            enable: true,
            mode: "grab"
          },
          onClick: {
            enable: true,
            mode: "push"
          },
          resize: true
        },
        modes: {
          grab: {
            distance: 140,
            links: {
              opacity: 1
            }
          },
          push: {
            quantity: 4
          }
        }
      }
    });
  });
</script>